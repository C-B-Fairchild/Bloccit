<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: { post: @post } %>
    <h1><%= @post.title %></h1>
    <small>
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
    </small>

      <%= image_tag(@post.image.thumb.url) if @post.image? %>

    <p><%= markdown @post.body %></p>
        <% if policy(@post).edit? %>
          <%= link_to "Edit Post", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
        <% end %>
        <% if policy(@post).destroy? %>
          <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
        <% end %>
        <div>
          <h3> <%= pluralize(@post.points, 'point') %></h3>
          <small>
            <%= pluralize(@post.up_votes, 'up vote') %>
            <%= pluralize(@post.down_votes, 'down vote') %>
          </small>
        </div>
          <%= render partial: 'favorites/favorite', locals: { post: @post } %>
  </div>
</div>

<div class="row">
  <div class="col-md-8"> 
    <% if policy(Comment.new).create? %>
    <%= render 'comments/form', topic: @topic, post: @post, body: @body, comment: @comment %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h4>Here are previous comments on this post.</h4>
      <% @comments.each do |comment| %>
      <%= render partial: 'comments/comment', locals: {comment: comment} %>
      <% end %>
  </div>
</div>